<!-- Handlebars START -->
<div class="container mb-3">
  <div class="logged-in-div mt-3">

    <!-- Navbar Start -->
    <div class="bg-dark text-white fs-4 rounded-3" style="padding:10px;" id="insideNav">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <div id="welcome"><b>Welcome</b></div>
        <div>
          <a href="/tracker" style="text-decoration:none; padding: 0 10px 0 10px;" onclick="goalNavHandler()">Tracker</a>
          <a href="/workouts" style="text-decoration:none; padding: 0 10px 0 10px;">Workouts</a>
          <a href="/goals" style="text-decoration:none; padding: 0 10px 0 10px;">Goals</a>
          <a href="#" style="text-decoration:none; padding: 0 10px 0 10px;" onclick="logout(event)">logout</a>
        </div>
      </div>
    </div>
    <!-- Navbar End -->

    <!-- Headings Start -->
    <h1 style="text-align: center;"><b>Goals</b></h1>
    <h3 style="text-align: center;">Input your data to the tracker</h3>
    <!-- Headings End -->

    <!-- Main Body Start -->
    <div class="row">
      <div class="col-md-4 pt-3">
        <form class="weight-form">
          <h2>Weight</h2>
          <div class="form-group">
            <label for="date"><b>Date:</b></label>
            <input type="date" class="form-control" id="weightDate" placeholder="Enter Date" value="">
            <script>document.getElementById('weightDate').value = new Date().toJSON().slice(0, 10);</script>
          </div>
          <div class="form-group">
            <label for="currentWeight"><b>Current Weight:</b></label>
            <input type="number" class="form-control" id="email" placeholder="Enter Current Weight">
          </div>
          <button type="submit" class="btn btn-primary btn-block w-100">Submit</button>
        </form>
      </div>
      <div class="col-md-4 pt-3">
        <form class="sleep-form">
          <h2>Sleep</h2>
          <div class="form-group">
            <label for="date"><b>Date:</b></label>
            <input type="date" class="form-control" id="sleepDate" placeholder="Enter Date">
            <script>document.getElementById('sleepDate').value = new Date().toJSON().slice(0, 10);</script>
          </div>
          <div class="form-group">
            <label for="hours"><b>Hours:</b></label>
            <input type="number" class="form-control" id="hours" placeholder="Enter Hours">
          </div>
          <button type="submit" class="btn btn-primary btn-block w-100">Submit</button>
        </form>
      </div>
      <div class="col-md-4 pt-3">
        <form class="water-form">
          <h2>Water</h2>
          <div class="form-group">
            <label for="date"><b>Date:</b></label>
            <input type="date" class="form-control" id="waterDate" placeholder="Enter Date">
            <script>document.getElementById('waterDate').value = new Date().toJSON().slice(0, 10);</script>
          </div>
          <div class="form-group">
            <label for="ounces"><b>Ounces:</b></label>
            <input type="number" class="form-control" id="ounces" placeholder="Enter Ounces">
          </div>
          <button type="submit" class="btn btn-primary btn-block w-100">Submit</button>
        </form>

      </div>
    </div>
    <!-- Main Body End -->
  </div>
</div>
<!-- Handlebars END -->